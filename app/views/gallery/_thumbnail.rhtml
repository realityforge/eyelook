<div class="thumbnail"><a href="<%= url_for(:user => @user.name, :album => @album.permalink, :picture => picture.position, :action => 'show') %>" title="<%= h(picture.caption) %>"><img src="<%= url_for(:action => 'show_image', :image => picture.filename, :size => 'thumbnail') %>" alt="<%= h(picture.caption) %>"/></a></div>