<% @page_title = "#{@user.name}: #{@album.caption} - #{@picture.caption}" %>
<div class="picture">
<img src="<%= url_for(:controller => 'album', :action => 'show_image', :user => params[:user], :album => params[:album], :picture => @picture.filename ) %>" alt="<%= h(@picture.caption) %>"/>
<h3><%= h(@picture.caption) %></h3>
<% if @picture.tags.size > 0 %>
<p>Tags:</p>
<ul><% for tag in @picture.tags %><li><%= h(tag.name) %></li><% end %></ul>
<% end %>
</div>
